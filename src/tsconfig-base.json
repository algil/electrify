{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",

    "removeComments": true,

    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,

    "inlineSources": true,
    "sourceMap": true,

    "newLine": "LF"
  }
}